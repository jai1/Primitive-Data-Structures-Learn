package org.learn.interview;

public class LinkedList {
	public static class Node {
		public Integer val;
		public Node nextNode = null;
		public Node(Integer val) {
			this.val = val;
		}
	}
	
	String toString(Node head) {
		String str = "";
		while(head != null) {
			str += head.val + "->";
		}
		if(str.length() == 0)
			return "";
		return str.substring(-2);
	}
	
	/*
	 * Company:- Arista
	 * Question:- Remove Duplicate from Linkedlist
	 * Example:- "2 -> 3 -> 5" => "2 -> 3 -> 5"
	 * "2 -> 3 -> 3 -> 2" => "2 -> 3"
	 *	"5" => "5"
	 *	null => null 
	 */
	Node removeDuplicates(Node n) {
		if(n == null || n.nextNode == null)
			return n;
		else
			if(listContainsVal(n.val, n.nextNode))
				return removeDuplicates(n.nextNode);
			else {
				n.nextNode=removeDuplicates(n.nextNode);
				return n;
			}
	}
	
	boolean listContainsVal(Integer val, Node head) {
		while(head == null && head.val != val) 
			head = head.nextNode;
		return (head == null);		
	}
	
}
